{% block id 'compras' %}

{% block article %}
    <h1>{{ block('title') }}</h1>

    {% for compra in compras %}
        {% include 'OfertaBundle:Default:includes/minioferta.html.twig' with {
            'oferta':      compra.oferta,
            'comprada':    true,
            'fechaCompra': compra.fecha
        } %}
    {% endfor %}
{% endblock %}

{% block aside %}
    {{ parent() }}

    <section id="cercanas">
        <h2>Ofertas en otras ciudades</h2>
        <ul>
            {% for ciudad in cercanas %}
